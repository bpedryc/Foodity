<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tools_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/unitconverter_title"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white" />


        <Spinner
            android:id="@+id/spinner_unitcategory"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="64dp"
            app:layout_constraintTop_toBottomOf="@id/tools_toolbar" />

        <LinearLayout
            android:id="@+id/layout_firstunit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="32dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/spinner_unitcategory"
            app:layout_constraintBottom_toTopOf="@id/layout_secondunit"
            android:background="@color/grey">

            <Spinner
                android:id="@+id/spinner_firstunit_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />
            <EditText
                android:id="@+id/edit_firstunit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_secondunit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="32dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout_firstunit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/grey">

            <Spinner
                android:id="@+id/spinner_secondunit_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_secondunit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>