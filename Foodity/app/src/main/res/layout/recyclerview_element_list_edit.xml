<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.haxos.foodity.data.model.ListNoteElementViewModel"
        />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <LinearLayout
            android:id="@+id/element_move"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/element_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="@{() -> viewModel.onMoveUp()}"/>

            <ImageButton
                android:id="@+id/element_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/element_up"
                android:onClick="@{() -> viewModel.onMoveDown()}"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/element_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/element_operations"
            app:layout_constraintStart_toEndOf="@+id/element_move"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                    android:id="@+id/element_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@={viewModel.listElement.title}"
                    android:hint="@string/listelement_title_hint"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/element_list_entries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                app:items="@{viewModel.bindableEntries}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/element_list_title" />

            <ImageButton
                android:id="@+id/action_noteelement_add"
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/bg_grey_rounded"
                android:layout_gravity="center"
                android:onClick="@{() -> viewModel.addEntry()}"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/element_operations"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/element_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/element_down"
                android:onClick="@{() -> viewModel.onDelete()}"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>